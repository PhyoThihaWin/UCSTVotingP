<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/init_ln_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/home"
        style="@style/SettingSixCardStyle"
        android:layout_marginTop="12dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/cardB"
        app:cardCornerRadius="2dp">

        <TextView
            style="@style/SettingTextViewInsideStyle"
            android:drawableLeft="@drawable/ic_home"
            android:drawablePadding="20dp"
            android:text="Home" />

        <!--<LinearLayout style="@style/SettingLinearInsideStyle">


        </LinearLayout>-->
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/boy"
        style="@style/SettingSixCardStyle"
        android:clickable="true"
        app:cardBackgroundColor="@color/cardB"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/vote_count_round"
            android:elevation="3dp">

            <TextView
                android:id="@+id/kingResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:text="Not Vote"
                android:textColor="#000"
                android:textSize="10dp" />
        </LinearLayout>

        <TextView
            style="@style/SettingTextViewInsideStyle"
            android:drawableLeft="@drawable/ic_king"
            android:drawablePadding="18dp"
            android:text="King Selection" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/girl"
        style="@style/SettingSixCardStyle"
        android:clickable="true"
        app:cardBackgroundColor="@color/cardB"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/vote_count_round"
            android:elevation="3dp">

            <TextView
                android:id="@+id/queenResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:text="Not Vote"
                android:textColor="#000"
                android:textSize="10dp" />
        </LinearLayout>

        <TextView
            style="@style/SettingTextViewInsideStyle"
            android:drawableLeft="@drawable/ic_queen"
            android:drawablePadding="18dp"
            android:text="Queen Selection" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/happy_zone"
        style="@style/SettingSixCardStyle"
        android:clickable="true"
        app:cardBackgroundColor="@color/cardB"
        app:cardCornerRadius="2dp">

        <TextView
            style="@style/SettingTextViewInsideStyle"
            android:drawableLeft="@drawable/ic_ball"
            android:drawablePadding="18dp"
            android:text="Happy Zone" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/lucky_draw"
        style="@style/SettingSixCardStyle"
        android:clickable="true"
        app:cardBackgroundColor="@color/cardB"
        app:cardCornerRadius="2dp">

        <TextView
            android:id="@+id/txtLog"
            style="@style/SettingTextViewInsideStyle"
            android:drawableLeft="@drawable/ic_food"
            android:drawablePadding="18dp"
            android:text="Log out" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/about_us"
        style="@style/SettingSixCardStyle"
        android:clickable="true"
        app:cardBackgroundColor="@color/cardB"
        app:cardCornerRadius="2dp">

        <TextView
            style="@style/SettingTextViewInsideStyle"
            android:drawableLeft="@drawable/ic_about"
            android:drawablePadding="18dp"
            android:text="About Us" />
    </android.support.v7.widget.CardView>

</LinearLayout>
