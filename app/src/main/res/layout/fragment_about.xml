<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/full_dialog_round">


    <ImageView
        android:id="@+id/imv_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/vote" />

    <TextView
        android:id="@+id/tv_uni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imv_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="CU(Thaton)"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_uni"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Voting System Team"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_team"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Contact:   luciferthiha881997@gmail.com"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_contact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Version:  1.2.0"
        android:textSize="12sp" />

</RelativeLayout>